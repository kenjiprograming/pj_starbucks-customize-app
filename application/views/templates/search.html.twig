{% extends "./templates/layout.html.twig" %}

{% block title %}
    Choice your drink
{% endblock title %}

{% block links %}
    <link rel="stylesheet" href="{{ baseUrl }}common/css/search_style.css">
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Courgette&display=swap" rel="stylesheet">
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Zen+Maru+Gothic:wght@300&display=swap" rel="stylesheet">
{% endblock links %}

{% block header %}
{% endblock header %}

{% block content %}

    <h1>Choice your Frappuccino</h1>

    <form action="{{ baseUrl }}result/" method="post">
        <div class="container">
            {% for index,drink in drinks %}
                <div class="container-a">
                    {% if drink.customizes['ice'] is empty and drink.customizes['hot'] is empty %}
                        <input class="btn" id="{{ index }}" disabled type="radio" name="name" value="{{ drink.name|raw }}">
                        <label for="{{ index }}">{{ drink.name|raw }}(準備中)
                        </label>
                    {% else %}
                        <input class="btn" id="{{ index }}" type="radio" name="name" value="{{ drink.name|raw }}">
                        <label for="{{ index }}">{{ drink.name|raw }}
                        </label>
                    {% endif %}
                    <p> <img style="max-width:300px; border-radius:150px;" src="{{ drink.imageUrl }}" alt=""></p>
                </div>
                <input type="hidden" name="imageUrl" value="{{ drink.imageUrl }}">
                <input type="hidden" name="price" value="{{ drink.price }}">
            {% endfor %}
        </div>

        <div class="selection-2">
            <h1>Choice hot or ice</h1>
        </div>

        {% if kind == 'frappuccino' %}
            <div class="container-2">
                <div class="container-b">
                    <input class="btn" id="g" disabled type="radio" name="ice_or_hot" value="hot">
                    <label for="g">Hot</label>
                </div>

                <div class="container-b">
                    <input class="btn" id="h" checked type="radio" name="ice_or_hot" value="ice">
                    <label for="h">Ice</label>
                </div>
            </div>
        {% else %}
            <div class="container-2">
                <div class="container-b">
                    <input class="btn" id="g" type="radio" name="ice_or_hot" value="hot">
                    <label for="g">Hot</label>
                </div>

                <div class="container-b">
                    <input class="btn" id="h" type="radio" name="ice_or_hot" value="ice">
                    <label for="h">Ice</label>
                </div>
            </div>
        {% endif %}

        <div class="selection-4">
            <p class="letscustomize">Let's customize!!</p>
            <input class="btn" type="submit" name="submit" value="カスタマイズする">
        </div>

    </form>
{% endblock content %}